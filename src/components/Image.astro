---
export interface Props {
    src: string;
    alt: string;
    caption: string;
    width?: string;
}

const { src, alt, caption, width = "100%" } = Astro.props;
---

<figure
    class="flex flex-col items-center justify-center text-grey hover:text-accent transition-all hover:drop-shadow-lg"
>
    <img
        src={src}
        alt={alt}
        width={width}
        class="rounded-lg border-2 border-transparent hover:border-accent transition-all"
    />
    {
        caption.length !== 0 ? (
            <figcaption class="font-space text-base text-grey text-center">
                <em>{caption}</em>
            </figcaption>
        ) : null
    }
</figure>
